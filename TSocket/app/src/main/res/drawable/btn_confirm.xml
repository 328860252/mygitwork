<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_enabled="false">
        <shape>
            <corners android:radius="8.0dip" />
            <gradient android:startColor="@color/round_button_normbg_color" android:endColor="@color/round_button_normbg_color" android:angle="270.0" />
            <stroke android:width="1.0dip" android:color="@color/round_button_normbg_color" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="8.0dip" />
            <gradient android:startColor="@color/round_button_press_color" android:endColor="@color/round_button_press_color" android:angle="270.0" />
            <stroke android:width="0.0dip" android:color="@color/round_button_press_color" />
        </shape>
    </item>
</selector>

 